<div class="container" id="main-container">
  <div class="jumbotron">
  </div>
  
  <div class="row">

    <div class="col-sm-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Burgers Available</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    
    <div class="col-sm-6">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Burgers You've Eaten</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
              {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="col-sm-12 text-center">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title text-center">Add An Item To The Menu</h5>
        </div>
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <strong><label for="ca">Burger Name:</label></strong>
              <input type="text" id="ca" name="name">
              <button type="submit">Add burger</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<footer class="footer">
  <div class="container">
      <p><a href="https://github.com/matthewemichael/burger" target="_blank">GitHub Repo</a></p>
  </div>
</footer>