<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1>Burgers!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 text-center">
      <h4>Burgers That Have Not Been Eaten!</h4>
    </div>
    <div class="col-xs-6 text-center">
      <h4>Burgers that have been eaten</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-xs-6">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>
  <div class="row">
    <div class="col-xs-12 text-center">
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add burger</button>
      </form>
    </div>
  </div>
</div>